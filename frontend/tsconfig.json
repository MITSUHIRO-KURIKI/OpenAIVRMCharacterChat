{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*":          ["./*"],
      "@/app/*":      ["app/*"],
      "@/features/*": ["features/*"],
      "@/hooks/*":    ["hooks/*"],
      "@/locale/*":   ["locale/*"],
      "@/src/*":      ["src/*"],
      "@/styles/*":   ["styles/*"]
    },
    "noImplicitAny": false
  },
  "include": ["next-env.d.ts", "types/*.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}